<Window x:Class="Stenography.ConcealImageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stenography"
        mc:Ignorable="d"
        Title="ConcealImageWindow" Height="auto" Width="auto">
    <Grid>
        <Image x:Name="image" HorizontalAlignment="Left" Height="100" Margin="10,24,0,0" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="loadVisibleImageButton" Content="Load Visible Image" HorizontalAlignment="Left" Margin="4,382,0,0" VerticalAlignment="Top" Click="loadVisibleImageButton_Click"/>
        <Image x:Name="visibleImage" HorizontalAlignment="Left" Height="300" Margin="10,66,0,0" VerticalAlignment="Top"/>
        <Button x:Name="loadHiddenImageButton" Content="Load Hidden Image" HorizontalAlignment="Left" Margin="640,382,0,0" VerticalAlignment="Top" Click="loadHiddenImageButton_Click"/>
        <Button x:Name="saveStegoImageButton" Content="Save Stego Image" HorizontalAlignment="Left" Margin="295,473,0,0" VerticalAlignment="Top" Click="saveStegoImageButton_Click"/>
        <Image x:Name="hiddenImage" HorizontalAlignment="Left" Height="342" Margin="448,24,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
